<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediCare" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/medical_blue</item>
        <item name="colorPrimaryDark">@color/medical_blue</item>
        <item name="colorAccent">@color/medical_cyan</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>
    
    <style name="Theme.MediCare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MediCare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MediCare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>